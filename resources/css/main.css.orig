#wrapper {
    width: 96%;
}

#nav {
    width: 25%;
}

#nav li {
    list-style-type: none;
}

#nav li a {
    display: inline-block;
    text-decoration: none;
    width: 150px;
}

#main {
    -webkit-columns: 3 200px;
    -moz-columns: 3 200px;
    columns: 3 200px;

    -webkit-column-gap: 4em;
    -moz-column-gap: 4em;
    column-gap: 4em;

    -webkit-column-rule: 1px dotted #ddd;
    -moz-column-rule: 1px dotted #ddd;
    column-rule: 1px dotted #ddd;
}

#footer {
}

